<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Navigation">

    <!-- using dependency from https://github.com/armcha/Space-Navigation-View -->

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:active_item_color="#4B86EC"
        app:centre_button_color="#fff"
        app:inactive_item_color="#000000"
        app:space_background_color="#ffffff"
        app:centre_button_icon="@drawable/bot"
        app:space_item_icon_size="25dp"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size" />


    <ImageView
        android:id="@+id/navigation_notification"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="270dp"
        android:src="@drawable/bell"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>


</RelativeLayout>