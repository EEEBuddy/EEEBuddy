<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterdEventsPage">



    <include layout="@layout/toolbar" android:id="@+id/reg_event_toolbar"/>



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/reg_event_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:tabSelectedTextColor="@color/purple"
        app:tabTextColor="#4D7152f2"
        app:tabIndicatorColor="@color/purple"
        android:layout_below="@+id/reg_event_toolbar">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/reg_event_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/reg_event_past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_event_tablayout"/>

</RelativeLayout>