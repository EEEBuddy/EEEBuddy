<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/join_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/join_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Confirmation"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/join_msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Message title"
                android:textColor="@color/mainFontColor"
                android:textSize="24sp"
                android:padding="10dp"
                android:layout_marginTop="46dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/join_msg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Message"
                android:textColor="@color/mainFontColor"
                android:textSize="24sp"
                android:padding="10dp"
                android:layout_below="@id/join_msg1"/>

            <TextView
                android:id="@+id/join_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="note"
                android:textColor="#cc0000"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_below="@id/join_msg2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/join_note">

                <Button
                    android:id="@+id/join_cancleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/login"
                    android:fontFamily="@font/roboto"
                    android:text="Cancle"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:alpha="0.3"
                    android:textStyle="bold"
                    android:layout_below="@+id/join_msg"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:id="@+id/join_cfmBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/login"
                    android:fontFamily="@font/roboto"
                    android:text="@string/join"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:alpha="0.3"
                    android:layout_below="@+id/join_msg"
                    android:layout_toEndOf="@id/join_cancleBtn"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>